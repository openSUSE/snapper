#!/bin/bash

if [ "$(id -u)" != "0" ]; then
   echo "These tests only work when run as root." >&2
   echo "Yes. See also the CAUTION file." >&2
   exit 1
fi

function run()
{
    cmd=$1

    echo
    echo "*** running $cmd ***"
    echo

    ./$cmd

    if [ $? != 0 ] ; then
        echo "failed"
        exit 1
    fi
}


run simple1

run permissions1
run permissions2
run permissions3

run owner1
run owner2
run owner3

run directory1

run missing-directory1

run error1
run error2
run error4

test -x xattrs1 && run xattrs1
test -x xattrs2 && run xattrs2
test -x xattrs3 && run xattrs3
test -x xattrs4 && run xattrs4
